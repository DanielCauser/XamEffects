<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamEffects.Sample"
             xmlns:xe="clr-namespace:XamEffects;assembly=XamEffects"
             x:Class="XamEffects.Sample.MainPage">

    <Grid HorizontalOptions="Center"
          VerticalOptions="Center"
          HeightRequest="300" 
          WidthRequest="200"
          BackgroundColor="LightGray"
          xe:TouchEffect.Color="Red"
          xe:Commands.Tap="{Binding TapCommand}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Text="Test touch effect"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        <Grid Row="1"
              Margin="5"
              BackgroundColor="Gray"
              xe:TouchEffect.Color="Blue"
              xe:Commands.Tap="{Binding Tap2Command}">
            <Label Text="Test internal touch effect"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>